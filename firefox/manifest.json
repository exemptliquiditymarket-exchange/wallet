{
  "manifest_version": 3,
  "name": "ELMX Exchange Wallet",
  "version": "1.0.0",
  "description": "Manage ELMX tokens and interact with the ELMX Network on the SEC-registered NMS Exchange known as Exempt Liuidity Market Exchange.",
  "homepage_url": "https://exemptliquiditymarket.exchange",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png",
    "256": "icons/logo.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webRequest", 
    "webRequestBlocking"
  ],
  "host_permissions": [
    "https://exemptliquiditymarket.exchange/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon-32.png",
    "default_title": "ELMX Wallet"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "vOdZk341cYwI7tw4N4r6NaeNwf2iZLFj@exemptliquiditymarket.exchange",
      "strict_min_version": "131.0"
    }
  },
  "files": [
    "background.js",
    "icons/",
    "popup/",
    "manifest.json"
  ]
}
